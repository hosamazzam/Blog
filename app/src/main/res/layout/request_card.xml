<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/pic_friend"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/no_image" />

    <TextView
        android:id="@+id/User_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pic_friend"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/pic_friend"
        android:layout_toRightOf="@+id/pic_friend"
        android:text="User Name"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/User_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/User_name"
        android:layout_marginLeft="5dp"

        android:layout_toEndOf="@+id/pic_friend"
        android:layout_toRightOf="@+id/pic_friend"
        android:text="User ID"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/pic_friend"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/remove_firend"
        android:layout_toStartOf="@+id/remove_firend"
        android:background="@drawable/green"
        android:text="Add"
        android:id="@+id/add_friend"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/remove_firend"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/pic_friend"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:background="@drawable/red"
        android:text="Remove"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic_friend"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/line_white" />

</RelativeLayout>