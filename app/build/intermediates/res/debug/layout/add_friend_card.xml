<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="130dp"
    android:background="@drawable/border"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pic_friend"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:background="@drawable/no_image" />

        <LinearLayout
            android:layout_width="160dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/User_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pic_friend"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/pic_friend"
                android:layout_toRightOf="@+id/pic_friend"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/User_id"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/User_name"
                android:layout_marginLeft="5dp"

                android:text="User ID"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:text="Add"
        android:id="@+id/search_friend_button"
        android:textAllCaps="false"
        android:textColor="#ff3883dd"
        android:textStyle="bold" />
</LinearLayout><!-- From: file:/C:/Users/hosam%20azzam/AndroidStudioProjects/Blog/app/src/main/res/layout/add_friend_card.xml -->