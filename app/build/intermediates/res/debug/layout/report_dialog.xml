<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="185dp"
    android:background="@drawable/border"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:text="Kindly choose Report reason"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/check1"
            android:layout_width="15dp"
            android:layout_height="15dp"

            android:layout_marginLeft="15dp"
            android:background="@drawable/checked" />

        <TextView
            android:id="@+id/reason1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-2dp"
            android:text="This is fake account"
            android:textAllCaps="false"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/check2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/unchecked" />

        <TextView
            android:id="@+id/reason2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-2dp"
            android:text="Post impropriate content"
            android:textAllCaps="false"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/check3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/unchecked" />

        <TextView
            android:id="@+id/reason3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-2dp"
            android:text="Post wrong data"
            android:textAllCaps="false"
            android:textColor="#000000" />
    </LinearLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black" />

    <Button
        android:id="@+id/report_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:text="Report"
        android:layout_marginBottom="5dp"
        android:textAllCaps="false"
        android:textColor="#ffdd2952"
        android:textStyle="bold" />
</LinearLayout><!-- From: file:/C:/Users/hosam%20azzam/AndroidStudioProjects/Blog/app/src/main/res/layout/report_dialog.xml -->